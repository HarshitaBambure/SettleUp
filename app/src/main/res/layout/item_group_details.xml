<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="30sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="H"
        android:id="@+id/txt_later"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hey!!!"
        app:layout_constraintBottom_toBottomOf="@+id/txt_later"
        app:layout_constraintStart_toEndOf="@+id/txt_later"
        app:layout_constraintTop_toTopOf="@+id/txt_later"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_membercount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="05"
        app:layout_constraintBottom_toBottomOf="@+id/txt_later"
        app:layout_constraintStart_toStartOf="@+id/txt_groupname"
        app:layout_constraintTop_toBottomOf="@+id/txt_groupname" />

    <TextView
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/txt_totalcredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="$200"
        app:layout_constraintBottom_toBottomOf="@+id/txt_membercount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_groupname" />

</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>