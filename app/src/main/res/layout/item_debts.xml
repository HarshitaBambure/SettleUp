<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_from_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:text="test1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_arrow" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/txt_touserer"
        app:layout_constraintStart_toEndOf="@+id/txt_from_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="3"
        android:text="test1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/img_arrow"
        app:layout_constraintTop_toBottomOf="@+id/img_arrow" />

    <TextView
        android:id="@+id/txt_touserer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:text="test2"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>